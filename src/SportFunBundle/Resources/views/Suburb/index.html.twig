{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Suburb list</h1>

    <table class="records_list table table-hover table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Postcode</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            {%  if not entity.status %}
                {% set rowClass = "danger" %}
            {%  else %}
                {% set rowClass = "" %}
            {%  endif %}
            <tr class="{{ rowClass }}">
                <td><a href="{{ path('suburb_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.postcode }}</td>
                <td>{{ entity.status }}</td>
                <td>
                    <a href="{{ path('suburb_show', { 'id': entity.id }) }}" class="btn btn-info">show</a>
                    <a href="{{ path('suburb_edit', { 'id': entity.id }) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('suburb_new') }}" class="btn btn-success">
                Create a new entry
            </a>

    {% endblock %}
